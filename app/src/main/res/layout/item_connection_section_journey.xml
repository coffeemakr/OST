<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/departureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="11:20"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/departureActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/productName"
        tools:text="11:20" />

    <TextView
        android:id="@+id/arrivalStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/arrivalTime"
        app:layout_constraintLeft_toLeftOf="@+id/departureStationName"
        tools:text="Schaffhausen" />

    <TextView
        android:id="@+id/arrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toLeftOf="@+id/departureTime"
        app:layout_constraintTop_toBottomOf="@+id/endDestination"
        tools:text="11:30" />


    <TextView
        android:id="@+id/actualArrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/departureTime"
        app:layout_constraintTop_toTopOf="@+id/endDestination"
        tools:text="11:30" />

    <TextView
        android:id="@+id/arrivalPlatform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/arrivalTime"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Gl. 21/22" />

    <TextView
        android:id="@+id/departurePlatform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/departureTime"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Gl. 21/22" />

    <TextView
        android:id="@+id/departureStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/departureTime"
        tools:text="ZÃ¼rich HB"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/departureStationName"
        app:layout_constraintTop_toBottomOf="@+id/departureStationName"
        tools:text="S 14" />

    <TextView
        android:id="@+id/endDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/departureStationName"
        app:layout_constraintTop_toBottomOf="@+id/productName"
        tools:text="Richtung Schaffhausen" />


</androidx.constraintlayout.widget.ConstraintLayout>