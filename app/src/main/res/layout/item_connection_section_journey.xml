<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="8dp">

    <TextView
        android:id="@+id/departureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="11:20" />

<TextView
    android:id="@+id/arrivalStationName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:textStyle="bold"
    app:layout_constraintBaseline_toBaselineOf="@+id/arrivalTime"
    app:layout_constraintLeft_toLeftOf="@+id/departureStationName"
    tools:text="Schaffhausen" />

<TextView
    android:id="@+id/arrivalTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    app:layout_constraintLeft_toLeftOf="@+id/departureTime"
    tools:text="11:30"
    android:layout_marginTop="9dp"
    app:layout_constraintTop_toBottomOf="@+id/endDestination" />



<TextView
    android:id="@+id/arrivalPlatform"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    app:layout_constraintBaseline_toBaselineOf="@+id/arrivalTime"
    app:layout_constraintRight_toRightOf="parent"
    tools:text="Gl. 21/22" />

<TextView
    android:id="@+id/departurePlatform"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:textStyle="bold"
    app:layout_constraintBaseline_toBaselineOf="@+id/departureTime"
    app:layout_constraintRight_toRightOf="parent"
    tools:text="Gl. 21/22" />

<TextView
    android:id="@+id/departureStationName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:textStyle="bold"
    app:layout_constraintLeft_toRightOf="@+id/departureTime"
    tools:text="ZÃ¼rich HB"
    app:layout_constraintBaseline_toBaselineOf="@+id/departureTime" />

<TextView
    android:id="@+id/productName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="8dp"
    tools:text="S 14"
    app:layout_constraintLeft_toLeftOf="@+id/departureStationName"
    app:layout_constraintTop_toBottomOf="@+id/departureStationName" />

<TextView
    android:id="@+id/endDestination"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"

    android:layout_marginTop="8dp"
    tools:text="Richtung Schaffhausen"
    app:layout_constraintLeft_toLeftOf="@+id/departureStationName"
    app:layout_constraintTop_toBottomOf="@+id/productName" />

</android.support.constraint.ConstraintLayout>